<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgNavigationBottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibBack"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:background="@drawable/custom_action_app_highlight_click_rectangle"
                android:src="@drawable/bt_back" />

            <ImageView
                android:id="@+id/ivTitle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                tools:src="@drawable/txt_title_likes" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/colorWhile_100"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvStars"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/custom_action_app_highlight_click_rectangle"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:text="@string/_0"
                android:textColor="@color/colorTextStar"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/bt_star"
                tools:text="9999" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>
</layout>